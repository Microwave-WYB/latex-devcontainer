{
    "build": {
        "dockerfile": "Dockerfile"
    },
    "customizations": {
        "vscode": {
            "extensions": [
                "james-yu.latex-workshop",
                "ban.spellright",
                "nickfode.latex-formatter",
                "mathematic.vscode-latex",
                "ms-azuretools.vscode-docker",
                "meezilla.json"
            ]
        }
    },
    "mounts": [
        "source=${env:USERPROFILE}/.gitconfig,target=/root/.gitconfig,type=bind,consistency=cached" // Windows only to use Git credentials
    ],
    "postCreateCommand": "mkdir -p .vscode;cp -n .devcontainer/settings.json .vscode;mkdir -p .github/workflows;cp -n .devcontainer/ci/latex_build.yml .github/workflows;cp -n .devcontainer/ci/.gitlab-ci.yml ./", // copy settings and CI
    // "postCreateCommand": "mkdir -p .vscode;cp -n .devcontainer/settings.json .vscode", // copy settings only
}